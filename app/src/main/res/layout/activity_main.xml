<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@android:color/white"
	>

	<android.support.design.widget.CoordinatorLayout
		android:id="@+id/activity_main_cl"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

		<android.support.design.widget.AppBarLayout
			android:id="@+id/activity_main_app_bar_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
			>

			<android.support.design.widget.CollapsingToolbarLayout
				android:id="@+id/activity_main_collapsing_toolbar_layout"
				android:layout_width="match_parent"
				android:layout_height="470dp"
				app:layout_scrollFlags="scroll|exitUntilCollapsed"
				>

				<RelativeLayout
					android:id="@+id/activity_main_rl_placeholder"
					android:layout_width="match_parent"
					android:layout_height="@dimen/image_margin"
					android:scaleType="centerCrop"
					android:background="@drawable/main_background"
					android:tint="#11000000"
					app:layout_collapseMode="parallax"
					android:visibility="invisible"
					>

					<RelativeLayout
						android:id="@+id/toolbar_rl"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@drawable/header_shadow"
						android:visibility="invisible"
						>

						<LinearLayout
							android:id="@+id/activity_main_ll_action_items_container"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:layout_centerInParent="true"
							android:weightSum="3"
							android:layout_marginBottom="@dimen/default_layout_margin"
							>

							<ImageView
								android:layout_width="0dp"
								android:layout_height="@dimen/social_network_icon_dimen"
								android:src="@drawable/twitter"
								android:layout_weight="1"
								/>

							<ImageView
								android:layout_width="0dp"
								android:layout_height="@dimen/social_network_icon_dimen"
								android:src="@drawable/linkedin"
								android:layout_weight="1"
								/>

							<ImageView
								android:layout_width="0dp"
								android:layout_height="@dimen/social_network_icon_dimen"
								android:src="@drawable/github"
								android:layout_weight="1"
								/>

						</LinearLayout>

					</RelativeLayout>

				</RelativeLayout>

				<FrameLayout
					android:id="@+id/activity_main_fl_title"
					android:layout_width="match_parent"
					android:layout_height="170dp"
					android:layout_gravity="bottom|center_horizontal"
					android:background="@color/primary_color"
					android:orientation="vertical"
					app:layout_collapseMode="parallax"
					>

					<LinearLayout
						android:id="@+id/activity_main_ll_title_container"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom|center_horizontal"
						android:orientation="vertical"
						>

						<TextView
							android:id="@+id/name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="34sp"
							android:textColor="@color/text_icon_color"
							android:text="@string/name"
							android:layout_gravity="center_horizontal"
							fontPath="fonts/Roboto-Thin.ttf"
							tools:ignore="MissingPrefix"
							/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="24sp"
							android:textColor="@color/text_icon_color"
							android:text="@string/occupation"
							android:layout_gravity="center_horizontal"
							fontPath="fonts/Roboto-Thin.ttf"
							tools:ignore="MissingPrefix"
							/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="18sp"
							android:textColor="@color/light_primary_color"
							android:text="@string/company"
							android:layout_gravity="center_horizontal"
							android:layout_marginBottom="@dimen/default_layout_margin"
							fontPath="fonts/Roboto-Thin.ttf"
							tools:ignore="MissingPrefix"
							/>

					</LinearLayout>
				</FrameLayout>
			</android.support.design.widget.CollapsingToolbarLayout>
		</android.support.design.widget.AppBarLayout>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/activity_main_rv_recycler_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scrollbars="none"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			/>


		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="@color/primary_color"
			app:layout_anchor="@id/activity_main_fl_title"
			app:theme="@style/ThemeOverlay.AppCompat.Dark"
			>

			<TextView
				android:id="@+id/activity_main_tv_toolbar_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/text_icon_color"
				android:textSize="20sp"
				android:layout_gravity="center_horizontal"
				android:gravity="bottom|left"
				android:text="@string/app_name"
				android:textAppearance="@style/TextAppearance.LobsterRegular"
				tools:ignore="MissingPrefix"
				/>

			<LinearLayout
				android:id="@+id/activity_main_ll_toolbar_items_container"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right|center_horizontal"
				android:orientation="horizontal"
				android:layout_centerInParent="true"
				android:layout_marginEnd="@dimen/default_layout_margin"
				android:weightSum="3"
				android:layout_marginBottom="@dimen/default_layout_margin"
				android:visibility="invisible"
				>

				<ImageView
					android:layout_width="0dp"
					android:layout_height="@dimen/social_network_icon_dimen_small"
					android:src="@drawable/twitter"
					android:layout_weight="1"
					/>

				<ImageView
					android:layout_width="0dp"
					android:layout_height="@dimen/social_network_icon_dimen_small"
					android:src="@drawable/linkedin"
					android:layout_weight="1"
					/>

				<ImageView
					android:layout_width="0dp"
					android:layout_height="@dimen/social_network_icon_dimen_small"
					android:src="@drawable/github"
					android:layout_weight="1"
					/>

			</LinearLayout>

		</android.support.v7.widget.Toolbar>

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/portfolio_logo"
			android:layout_width="@dimen/toolbar_circle_image_height"
			android:layout_height="@dimen/toolbar_circle_image_height"
			android:src="@drawable/portoflio"
			app:border_width="1dp"
			app:border_color="#FFFFFF"
			app:layout_behavior="com.panwrona.myportfolio.customviews.support_layouts.AvatarImageBehavior"
			/>

	</android.support.design.widget.CoordinatorLayout>

</LinearLayout>